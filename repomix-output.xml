    # This saves API calls and makes switching timeframes instant.
    is_intraday_derived = range in ["5M", "15M", "1H", "4H"]
    lookup_range = "5M" if is_intraday_derived else range
    
    # --- 3. CACHE LOOKUP ---
    # We use a unique cache key for the Base Data
    cache_key = f"chart_base_v6_{symbol}_{lookup_range}"
    
    # Cache Rules: 
    # Intraday = 5 mins (to refresh candles)
    # Daily/History = 12 Hours (History doesn't change often)
    ttl = 300 if is_intraday_derived else 43200
    
    chart_data = redis_service.get_cache(cache_key)
    
    # --- 4. FETCH DATA (IF CACHE MISS) ---
    if not chart_data:
        if is_fmp_asset:
            # --- FMP ROUTING ---
            # Clean Symbol: "BTC-USD.CC" -> "BTCUSD"
