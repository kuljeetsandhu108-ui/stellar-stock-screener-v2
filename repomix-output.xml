        // Look for "Key: Value" pattern or "- Value"
        if (clean.includes(':')) {
            const parts = clean.split(':');
            items.push([parts[0].replace(/^[*-]\s*/, '').trim(), parts.slice(1).join(':').trim(), '']);
        } else if (clean.startsWith('-') || clean.startsWith('*')) {
             items.push(['Point', clean.replace(/^[*-]\s*/, '').trim(), '']);
