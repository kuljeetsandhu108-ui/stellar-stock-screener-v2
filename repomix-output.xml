import asyncio
import json
import os
import threading
import datetime
from fastapi import WebSocket
from ..services import eodhd_service, fmp_service

# --- 1. SAFE IMPORTS & CREDENTIALS ---
try:
    from fyers_apiv3.FyersWebsocket import data_ws
    FYERS_INSTALLED = True
except ImportError:
    FYERS_INSTALLED = False
    print("⚠️ Fyers SDK not installed. Run 'pip install fyers-apiv3'")

FYERS_ACCESS_TOKEN = os.getenv("FYERS_ACCESS_TOKEN")
FYERS_CLIENT_ID = os.getenv("FYERS_CLIENT_ID") 

class StreamHub:
    def __init__(self):
        # Maps Symbol -> List of Connected User Sockets
        # e.g. { "RELIANCE.NS": [ws1, ws2], "MARKET_OVERVIEW": [ws3] }
        self.active_connections: dict[str, list[WebSocket]] = {}
        self.is_running = False
        self.main_loop = None # Reference to main async loop for thread safety
        self.BANNER_CHANNEL = "MARKET_OVERVIEW"
        
        # --- A. DYNAMIC MCX GENERATOR (India Futures) ---
        # Auto-calculates symbols like 'MCX:CRUDEOIL26JANFUT'
        self.mcx_map = self.generate_mcx_symbols()

        # --- B. FYERS MAPPING (Indices + MCX) ---
        self.fyers_map = {
            "NSE:NIFTY50-INDEX": "NSEI.INDX",
            "NSE:NIFTYBANK-INDEX": "NSEBANK.INDX",
            "BSE:SENSEX-INDEX": "BSESN.INDX",
            "NSE:INDIAVIX-INDEX": "INDIAVIX.INDX",
            **self.mcx_map
        }
        self.fyers_subscribe_list = list(self.fyers_map.keys())
        
        # --- C. CRYPTO MAPPING (Internal ID -> FMP Ticker) ---
        # We use FMP for Crypto as it is faster/cleaner than EODHD for coins
        self.crypto_map = {
            "BTC-USD.CC": "BTCUSD",
            "ETH-USD.CC": "ETHUSD",
            "SOL-USD.CC": "SOLUSD",
            "XRP-USD.CC": "XRPUSD",
            "DOGE-USD.CC": "DOGEUSD",
            "BNB-USD.CC": "BNBUSD",
            "MATIC-USD.CC": "MATICUSD",
            "ADA-USD.CC": "ADAUSD",
            # Global Spot Commodities (FMP)
            "XAU-USD.CC": "XAUUSD", # Gold Spot
            "USO.US": "CLUSD"       # Crude Oil Spot (WTI)
        }

    def generate_mcx_symbols(self):
        """
        Auto-generates Fyers Symbols for current month expiry.
        Logic: MCX + SYMBOL + YY + MMM + FUT
        """
        try:
            now = datetime.datetime.now()
            # Fyers uses 3-letter month in Caps (JAN, FEB)
            month_str = now.strftime("%b").upper() 
            # Fyers uses 2-digit year (26)
            year_str = now.strftime("%y") 
            
            # Map Fyers MCX Symbol -> Internal ID
            commodities = {
                "CRUDEOIL": "USO.US", # We map MCX Crude to our internal Oil ID
                "GOLD": "XAU-USD.CC",
                "SILVER": "XAG-USD.CC",
                "NATURALGAS": "UNG.US",
                "COPPER": "CPER.US"
            }
            
            mapping = {}
            for comm, internal in commodities.items():
                fyers_sym = f"MCX:{comm}{year_str}{month_str}FUT"
                mapping[fyers_sym] = internal
            return mapping
        except: return {}

    # --- CONNECTION MANAGEMENT ---

    async def connect(self, websocket: WebSocket, symbol: str):
        await websocket.accept()
        symbol = symbol.upper().strip()
        if symbol not in self.active_connections:
            self.active_connections[symbol] = []
        self.active_connections[symbol].append(websocket)

    def disconnect(self, websocket: WebSocket, symbol: str):
        symbol = symbol.upper().strip()
        if symbol in self.active_connections:
            if websocket in self.active_connections[symbol]:
                self.active_connections[symbol].remove(websocket)
            if not self.active_connections[symbol]:
                del self.active_connections[symbol]

    async def broadcast(self, symbol: str, data: dict):
        """
        Push data to:
        1. Direct listeners (Chart/Header)
        2. Banner listeners (Homepage)
        """
        # 1. Direct
        if symbol in self.active_connections:
            message = json.dumps(data)
            for connection in self.active_connections[symbol][:]:
                try: await connection.send_text(message)
                except: self.disconnect(connection, symbol)

        # 2. Banner (Market Overview)
        if self.BANNER_CHANNEL in self.active_connections:
            # Simple whitelist check to avoid spamming the banner with obscure stocks
            is_major = symbol in self.fyers_map.values() or symbol in self.crypto_map or "DJI" in symbol or "GSPC" in symbol
            
            if is_major:
                banner_payload = {**data, "symbol": symbol}
                msg = json.dumps(banner_payload)
                for connection in self.active_connections[self.BANNER_CHANNEL][:]:
                    try: await connection.send_text(msg)
                    except: self.disconnect(connection, self.BANNER_CHANNEL)

    # ==========================================
    # ENGINE 1: FYERS WEBSOCKET (True Real-Time)
    # ==========================================
    def start_fyers_engine(self):
        """
        Runs in background thread. 
        Handles Indices (Nifty/BankNifty) & MCX.
        """
        if not FYERS_INSTALLED or not FYERS_ACCESS_TOKEN: return

        def on_message(msg):
            try:
                # Fyers packet: {'symbol': '...', 'ltp': 123.45, ...}
                if isinstance(msg, dict) and 'symbol' in msg and 'ltp' in msg:
                    fyers_sym = msg['symbol']
                    target_sym = self.fyers_map.get(fyers_sym)
                    
                    if target_sym:
                        payload = {
                            "price": msg.get('ltp'),
                            "change": msg.get('ch', 0),
                            "percent_change": msg.get('chp', 0),
                            "timestamp": msg.get('exch_feed_time')
                        }
                        # Bridge to Main Async Loop
                        if self.main_loop:
                            asyncio.run_coroutine_threadsafe(
                                self.broadcast(target_sym, payload), 
                                self.main_loop
                            )
            except: pass

        def on_open():
            print(f"✅ Fyers Engine Active. Tracking {len(self.fyers_subscribe_list)} instruments.")
            fyers.subscribe(symbols=self.fyers_subscribe_list, data_type="SymbolUpdate")

        token = f"{FYERS_CLIENT_ID}:{FYERS_ACCESS_TOKEN}"
        fyers = data_ws.FyersDataSocket(
            access_token=token, log_path="", litemode=True, write_to_file=False, 
            reconnect=True, on_connect=on_open, on_message=on_message
        )
        try: fyers.connect()
        except: pass

    # ==========================================
    # ENGINE 2: HYBRID POLLER (FMP + EODHD)
    # ==========================================
    async def start_stream_engine(self):
        """
        Runs in Main Async Loop.
        Handles Crypto (FMP), Global (EODHD), Stocks (EODHD).
        """
        self.is_running = True
        self.main_loop = asyncio.get_running_loop()
        
        # 1. Launch Fyers in Thread
        threading.Thread(target=self.start_fyers_engine, daemon=True).start()
        
        print("🚀 Stream Hub: Hybrid Engine Started (1s Tick)")

        while self.is_running:
            try:
                # 1. Get Active Symbols
                active = list(self.active_connections.keys())
                
                # If Banner is active, force add major tickers so homepage works
                if self.BANNER_CHANNEL in self.active_connections:
                    active.extend(["BTC-USD.CC", "ETH-USD.CC", "XAU-USD.CC", "DJI.INDX", "GSPC.INDX"])
                
                if not active:
                    await asyncio.sleep(1); continue

                # 2. Sort Symbols into Buckets
                crypto_batch = [] # Goes to FMP
                stock_batch = []  # Goes to EODHD
                
                # Check if Fyers is working to decide if we skip indices
                fyers_active = bool(FYERS_ACCESS_TOKEN)

                for s in set(active):
                    if s == self.BANNER_CHANNEL: continue
                    
                    # A. Crypto/Commodities -> FMP
                    if s in self.crypto_map:
                        crypto_batch.append(self.crypto_map[s])
                    
                    # B. Indices/MCX -> Fyers (Skip here if Fyers active)
                    elif fyers_active and s in self.fyers_map.values():
                        continue
                    
                    # C. Everything else -> EODHD
                    else:
                        stock_batch.append(s)

                # --- PROCESS FMP BATCH (Crypto) ---
                if crypto_batch:
                    # Fetch from FMP Quote Endpoint
                    data = await asyncio.to_thread(fmp_service.get_crypto_real_time_bulk, crypto_batch)
                    if data:
                        for item in data:
                            fmp_sym = item.get('symbol')
                            # Map FMP Ticker (BTCUSD) -> Internal ID (BTC-USD.CC)
                            target = next((k for k, v in self.crypto_map.items() if v == fmp_sym), None)
                            
                            if target:
                                await self.broadcast(target, {
                                    "price": item.get('price'),
                                    "change": item.get('change'),
                                    "percent_change": item.get('changesPercentage'),
                                    "timestamp": item.get('timestamp'),
                                    "volume": item.get('volume')
                                })

                # --- PROCESS EODHD BATCH (Stocks) ---
                if stock_batch:
                    # Chunk to 50
                    for i in range(0, len(stock_batch), 50):
                        chunk = stock_batch[i:i+50]
                        data = await asyncio.to_thread(eodhd_service.get_real_time_bulk, chunk)
                        if data:
                            for item in data:
                                code = item.get('code')
                                # Fuzzy match code to symbol
                                target = next((x for x in chunk if code in x), None)
                                if target:
                                    await self.broadcast(target, {
                                        "price": item.get('close'),
                                        "change": item.get('change'),
                                        "percent_change": item.get('change_p'),
                                        "timestamp": item.get('timestamp'),
                                        "volume": item.get('volume')
                                    })

            except Exception: pass
            
            # 1 Second Heartbeat (High Speed)
            await asyncio.sleep(1)

