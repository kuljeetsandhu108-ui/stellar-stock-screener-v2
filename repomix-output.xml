        else:
            # --- EODHD ROUTING (STOCKS) ---
            chart_data = await asyncio.to_thread(eodhd_service.get_historical_data, symbol, range_type=lookup_range)
            
        # Save to Redis if we got data
        if chart_data:
            redis_service.set_cache(cache_key, chart_data, ttl)
    
    if not chart_data: return []

    # --- 5. MATH RESAMPLING ENGINE ---
    # If we have 5M data but user wants 1H, we calculate it here mathematically.
    # This is much faster than asking the API again.
    final_data = chart_data
    if is_intraday_derived and range != "5M":
        # Pass to technical_service to aggregate candles 
        # (Open=First, Close=Last, High=Max, Low=Min, Vol=Sum)
        resampled = technical_service.resample_chart_data(chart_data, range)
