      .map(row => row.split('|').map(c => c.trim()))
      .filter(r => r.length > 3 && !r[1].includes('---') && !r[1].toLowerCase().includes('criteria'));
      
    if (tableRows.length > 0) return tableRows;

    // 2. Fallback to Text Parsing
